                       monad-loops,
                       time,
                       unix,
                       filepath,
                       directory,
                       libffi,
                       zip,
                       text,
                       bytestring,
                       containers,
                       primitive,
                       vector,
                       mtl,
                       inline-c,
                       unagi-chan,
                       pretty-terminal,
                       souffle-haskell,
                       external-stg
  default-language:    Haskell2010

